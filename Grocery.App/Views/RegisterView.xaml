<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.RegisterView"
             x:DataType="vm:RegisterViewModel"
             Title="Register">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Input fields -->
        <Entry Placeholder="Name" Text="{Binding Name}" />
        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
        <Entry Placeholder="Confirm Password" Text="{Binding ConfirmPassword}" IsPassword="True" />

        <!-- Register button -->
        <Button Text="Register" Command="{Binding RegisterCommand}" />

        <!-- Feedback message -->
        <Label Text="{Binding RegistrationMessage}" TextColor="Red" HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
